<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/alert_switch_radius"/>
            <size android:height="@dimen/alert_switch_thumb_height" android:width="@dimen/alert_switch_thumb_width"/>
            <stroke android:width="@dimen/alert_switch_stroke" android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/alert_switch_radius"/>
            <size android:height="@dimen/alert_switch_thumb_height" android:width="@dimen/alert_switch_thumb_width"/>
            <stroke android:width="@dimen/alert_switch_stroke" android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/thumb_color"/>
            <corners android:radius="@dimen/alert_switch_radius"/>
            <size android:height="@dimen/alert_switch_thumb_height" android:width="@dimen/alert_switch_thumb_width"/>
            <stroke android:width="@dimen/alert_switch_stroke" android:color="@color/transparent"/>
        </shape>
    </item>
    <item android:state_enabled="false" android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <solid android:color="@color/thumb_color"/>
            <corners android:radius="@dimen/alert_switch_radius"/>
            <size android:height="@dimen/alert_switch_thumb_height" android:width="@dimen/alert_switch_thumb_width"/>
            <stroke android:width="@dimen/alert_switch_stroke" android:color="@color/transparent"/>
        </shape>
    </item>
</selector>
