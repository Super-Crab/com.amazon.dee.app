<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/dm_bottom_navigation_icon_size" android:width="@dimen/dm_bottom_navigation_icon_size"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:gravity="top|center_horizontal" android:id="@+id/dm_tab_indicator">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dm_bottom_navigation_top_line_radius"/>
            <size android:height="@dimen/dm_bottom_navigation_top_line_height" android:width="@dimen/dm_bottom_navigation_top_line_width"/>
            <solid android:color="?attr/mosaicAction40"/>
        </shape>
    </item>
</layer-list>
