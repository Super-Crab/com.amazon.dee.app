<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item android:drawable="@drawable/bar_button_bg_enabled"/>
            <item>
                <inset android:drawable="@drawable/ic_play_btn_enabled" android:insetLeft="12sp" android:insetRight="8sp" android:insetTop="8sp" android:insetBottom="8sp"/>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item android:drawable="@drawable/bar_button_bg_disabled"/>
            <item>
                <inset android:drawable="@drawable/ic_play_btn_disabled" android:insetLeft="12sp" android:insetRight="8sp" android:insetTop="8sp" android:insetBottom="8sp"/>
            </item>
        </layer-list>
    </item>
</selector>
