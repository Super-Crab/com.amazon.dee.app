<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/apparentlayout" android:layout_width="match_parent" android:layout_height="match_parent">
    <WebView android:id="@+id/apwebview" android:visibility="gone" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/apimageview" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="center" android:adjustViewBounds="true"/>
    <ProgressBar android:id="@+id/approgressbar" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp" style="@android:style/Widget.ProgressBar.Horizontal"/>
</RelativeLayout>
