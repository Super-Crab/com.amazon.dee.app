<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/recycler_view_item" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/recycler_view_resources" android:focusable="true" android:layout_width="match_parent" style="@style/recycler_view_resources">
        <TextView android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/item_text" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:textDirection="locale" android:layout_marginEnd="4dp" style="@style/text_margins"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/item_icon" android:background="@android:color/transparent" android:layout_width="24dp" android:layout_height="24dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/hidden_item_container" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:transformPivotY="0dp"/>
    <View android:id="@+id/menu_item_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1dp" style="@style/item_divider_margins"/>
</LinearLayout>
