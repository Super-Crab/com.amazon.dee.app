<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/backgroundColor" android:layout_width="match_parent" android:layout_height="match_parent" android:importantForAccessibility="yes">
    <RelativeLayout android:id="@+id/home_header" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/amahc_elevation_large" android:backgroundTint="@color/backgroundColor" android:outlineProvider="none">
        <LinearLayout android:orientation="horizontal" android:id="@+id/home_header_top_row" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <RelativeLayout android:id="@+id/home_header_alexa_wrapper" android:layout_width="match_parent" android:layout_height="wrap_content" android:alpha="0">
                    <ImageView android:id="@+id/home_header_alexa_icon" android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:src="@drawable/amahc_ic_alexa" android:layout_centerVertical="true" android:contentDescription="@string/amahc_alexa_button_talkback" android:layout_marginStart="@dimen/amahc_margin_large" android:layout_marginEnd="@dimen/amahc_margin_large" android:layout_alignParentStart="true"/>
                    <com.amazon.alexa.font.FontTextView android:textSize="@dimen/amahc_text_size_secondary" android:id="@+id/home_header_alexa_hint" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/amahc_alexa_hint" android:layout_centerVertical="true" android:layout_toEndOf="@+id/home_header_alexa_icon" app:fontName="16"/>
                    <androidx.cardview.widget.CardView android:id="@+id/home_header_rounded_button" android:layout_width="match_parent" android:layout_height="32dp" android:layout_centerVertical="true" android:layout_toEndOf="@+id/home_header_alexa_icon" app:cardBackgroundColor="@android:color/transparent" app:cardCornerRadius="@dimen/amahc_corner_radius_small" app:cardElevation="@dimen/amahc_elevation_none">
                        <com.amazon.alexa.font.FontTextView android:gravity="start|center_vertical" android:id="@+id/home_header_alexa_hint_twa" android:layout_width="match_parent" android:layout_height="match_parent" android:textAllCaps="false" android:paddingStart="8dp" android:paddingEnd="0dp"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <ImageView android:id="@+id/home_header_twa_keyboard" android:visibility="visible" android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:layout_margin="@dimen/amahc_margin_large" android:src="@drawable/amahc_ic_keyboard"/>
            </RelativeLayout>
            <ImageView android:id="@+id/vox_placeholder" android:padding="@dimen/amahc_margin_large" android:visibility="invisible" android:layout_width="1dp" android:layout_height="@dimen/amahc_height_large_56" android:src="@drawable/amahc_ic_alexa"/>
            <RelativeLayout android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:layout_marginTop="@dimen/amahc_margin_large" android:layout_marginBottom="@dimen/amahc_margin_large" android:layout_marginStart="15dp" android:layout_marginEnd="@dimen/amahc_margin_large">
                <ImageView android:id="@+id/home_header_help_feedback" android:visibility="gone" android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:src="@drawable/amahc_ic_help" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/home_header_discover" android:visibility="gone" android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:src="@drawable/amahc_ic_menu_discover" android:layout_centerInParent="true"/>
                <ImageView android:id="@+id/home_header_settings" android:visibility="gone" android:layout_width="@dimen/amahc_width_medium" android:layout_height="@dimen/amahc_height_medium" android:src="@drawable/amahc_ic_menu_settings" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/banner_notification" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/home_header_top_row">
            <com.amazon.alexa.font.FontTextView android:textSize="@dimen/amahc_text_size_caption" android:ellipsize="end" android:gravity="center" android:id="@+id/banner_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/amahc_margin_extra_small" android:layout_marginBottom="@dimen/amahc_margin_extra_small" android:text="@string/amahc_no_connection" android:maxLines="2" android:singleLine="false" android:layout_centerInParent="true" android:layout_marginStart="@dimen/amahc_margin_large" android:layout_marginEnd="@dimen/amahc_margin_large" app:fontName="16"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/live_updates_refresh_button_wrapper" android:background="@android:color/transparent" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="32dp" android:layout_below="@+id/home_header" android:layout_centerHorizontal="true" android:elevation="@dimen/amahc_elevation_large">
        <androidx.cardview.widget.CardView android:id="@+id/border_card_view" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true" app:cardBackgroundColor="@android:color/transparent" app:cardCornerRadius="16dp" app:cardElevation="@dimen/amahc_elevation_none">
            <Button android:textColor="@android:color/transparent" android:gravity="center" android:id="@+id/live_updates_refresh_button" android:background="@android:color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/amahc_refresh" android:textAllCaps="true"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/refresh_container" android:layout_width="match_parent" android:layout_height="match_parent" android:elevation="@dimen/amahc_elevation_none">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/redesign_home_container_main_view" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never" android:accessibilityTraversalAfter="@+id/home_header_help_feedback"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/device_picker_container" android:layout_width="0dp" android:layout_height="0dp" android:elevation="@dimen/amahc_elevation_large"/>
    <ViewStub android:id="@+id/error_view_stub" android:layout="@layout/amahc_error_page_wrapper" android:inflatedId="@+id/error_view" android:layout_width="match_parent" android:layout_height="match_parent" android:elevation="@dimen/amahc_elevation_large"/>
</RelativeLayout>
