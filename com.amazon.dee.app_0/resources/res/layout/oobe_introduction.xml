<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:fillViewport="true" android:layout_weight="1">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.amazon.deecomms.common.ui.CommsTextView android:gravity="center_horizontal" android:paddingBottom="@dimen/oobe_padding_bottom" android:layout_height="wrap_content" android:layout_marginTop="@dimen/oobe_intro_vid_padding_top" android:text="@string/oobe_intro_title" style="@style/AlexaComms.title_with_width"/>
            <com.amazon.deecomms.common.ui.CommsTextView android:gravity="center_horizontal" android:id="@+id/oobe_intro_desc" android:layout_height="0dp" android:text="@string/oobe_intro_desc" android:layout_weight="1" style="@style/AlexaComms.intro_subtext"/>
        </LinearLayout>
    </ScrollView>
    <com.amazon.deecomms.common.ui.CommsButton android:layout_gravity="center_horizontal" android:id="@+id/oobe_intro_continue_btn" android:layout_height="wrap_content" android:layout_marginTop="@dimen/oobe_padding_medium" android:text="@string/oobe_get_started" android:textAllCaps="true" style="@style/AlexaCommsButton.Primary.Right"/>
</LinearLayout>
